  boletoBarcode     String?
  dataPagamento     DateTime?
  
  vendedorId        String
  observacoes       String?
  motivoCancelamento String?

  afiliacaoId       String?
  vendaId           String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  produto           Produto  @relation(fields: [produtoId], references: [id])
  vendedor          User     @relation(fields: [vendedorId], references: [id])
  
  @@map("PedidoPAD")
}

model PixelConversao {
  id                String   @id @default(cuid())
  produtoId         String
  
  titulo            String
  plataforma        String
  pixelId           String
  tokenAPI          String?
  
  eventoCheckout    Boolean  @default(false)
  eventoCompra      Boolean  @default(false)
  eventoPAD         Boolean  @default(false)
  
  condicaoPix       Boolean  @default(false)
  condicaoBoleto    Boolean  @default(false)
  condicaoPAD       Boolean  @default(false)
  condicaoPagamentoAprovado Boolean @default(false)
  
  status            String   @default("ATIVO")
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  produto           Produto  @relation(fields: [produtoId], references: [id])
  
  @@map("PixelConversao")
}


model ConfiguracaoGateway {
  id        String   @id @default(cuid())
  metodo    String   @unique // PIX | BOLETO | CARTAO
  gateway   String   // PAGGPIX | MERCADOPAGO | ASAAS
  ativo     Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("ConfiguracaoGateway")
}
